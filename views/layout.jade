        .vjs-default-skin .vjs-subtitles-button:before { content: "\e008"; }
    script.
        $(function() {
            videojs("vplayer", {"height": "480", "width": "720"}, function() {
                    var vplayer = this;
                    var aspectRatio = 9 / 16; // Make up an aspect ratio

                    function resizeVideoJS() {
                        var width = document.getElementById(vplayer.id()).parentElement.offsetWidth;
                        vplayer.width(width).height(width * aspectRatio);
                    }

                    resizeVideoJS();
                    window.onresize = resizeVideoJS;
                });
        });

        .vjs-default-skin .vjs-control-bar { font-size: 100%; }
        .vjs-default-skin .vjs-text-track {display: none; font-size: 1.4em; text-align: center; margin-bottom: .1em; background-color: #000; background-color: rgba(0,0,0,0); }
